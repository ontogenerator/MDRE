@article{brandstatter_priority_2006,
	title = {The Priority Heuristic: Making Choices Without Trade-Offs},
	volume = {113},
	issn = {0033-295X},
	url = {http://www.ncbi.nlm.nih.gov/pmc/articles/PMC2891015/},
	doi = {10.1037/0033-295X.113.2.409},
