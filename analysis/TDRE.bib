	keywords = {Animals, Color, Biological Evolution, Moths, Predatory Behavior, Cognition, Phenotype, Environment, Polymorphism, Genetic, Songbirds}
}

@article{borrell_mechanics_2006,
	title = {Mechanics of nectar feeding in the orchid bee \textit{Euglossa imperialis}: pressure, viscosity and flow},
