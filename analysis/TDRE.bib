@article{wey_social_2008,
	title = {Social network analysis of animal behaviour: a promising tool for the study of sociality},
	volume = {75},
	issn = {00033472},
	doi = {10.1016/j.anbehav.2007.06.020},
	shorttitle = {Social network analysis of animal behaviour},
	abstract = {Social animals live and interact together, forming complex relationships and social structure. These relationships can have important fitness consequences, but most studies do not explicitly measure those relationships. An approach that explicitly measures relationships will further our understanding of social complexity and the consequences of both direct and indirect interactions. Social network analysis is the study of social groups as networks of nodes connected by social ties. This approach examines individuals and groups in the context of relationships between group members. Application of social network analysis to animal behaviour can advance the field by identifying and quantifying specific attributes of social relationships, many of which are not captured by more common measures of sociality, such as group size. Sophisticated methods for network construction and analysis exist in other fields, but until recently, have seen relatively little application to animal systems. We present a brief history of social network analysis, a description of basic concepts and previous applications to animal behaviour. We then highlight relevance and constraints of some network measures, including results from an original study of the effect of sampling on network parameter estimates, and we end with promising directions for research. By doing so, we provide a prospective overview of social network analysis' general utility for the study of animal social behaviour. © 2007 The Association for the Study of Animal Behaviour.},
	pages = {333--344},
	number = {2},
	journaltitle = {Animal Behaviour},
	author = {Wey, T. and Blumstein, D.T. and Shen, W. and Jordán, F.},
	date = {2008},
	keywords = {animal behaviour, quantifying sociality, social network analysis, social structure}
}

@article{whalen_learning_2015,
