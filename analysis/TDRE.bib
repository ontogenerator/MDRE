	journaltitle = {Comp. Biochem. Phys. A},
	author = {Ayala-Berdón, Jorge and Rodríguez-Peña, Nelly and Orduña-Villaseñor, Mónica and Stoner, Kathryn E and Kelm, Detlev H and Schondube, Jorge E},
