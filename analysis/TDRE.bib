@article{kimber_elasmobranch_nodate,
	title = {Elasmobranch cognitive ability: using electroreceptive foraging behaviour to demonstrate learning, habituation and memory in a benthic shark},
	issn = {1435-9448, 1435-9456},
	url = {http://link.springer.com/article/10.1007/s10071-013-0637-8},
